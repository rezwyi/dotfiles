syntax enable
set background=light
colorscheme solarized

set nocompatible
set nobackup
set hls
set ic
set incsearch
set history=4096
set number
set ruler
set expandtab
set shiftwidth=2
set tabstop=2
set shiftround
set splitbelow
set splitright
set autoindent
set backspace=indent,eol,start
set clipboard=unnamed
set showcmd
set encoding=utf8
set t_Co=256
set laststatus=2
set noswapfile
set cursorline
set nowrap
set switchbuf+=newtab

filetype plugin on


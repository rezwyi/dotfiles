syntax enable

" Global settings
set nocompatible
set nobackup
set hls
set ic
set incsearch
set history=4096
set number
set ruler
set expandtab
set shiftwidth=2
set tabstop=2
set shiftround
set splitbelow
set splitright
set autoindent
set backspace=indent,eol,start
set clipboard=unnamed
set showcmd
set encoding=utf8
set t_Co=256
set laststatus=2
set noswapfile
set cursorline
set wrap
set switchbuf+=newtab
set eol
set ffs=mac,unix
set showmatch
set lazyredraw
set ttyfast
set autoread
set nostartofline
set wildmenu
set wildchar=<TAB>
set wildmode=longest:list,full
set wildignore+=.DS_Store,*.jpg,*.png,*.gif,node_modules/**,vendor/bundle/**

" Setup colorscheme
set background=light
colorscheme solarized

" NERDTree plugin
let g:NERDTreeShowHidden=1
let g:NERDTreeWinSize=40
